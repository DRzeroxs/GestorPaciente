@using GestorPaciente.Core.Application.ViewModels.Paciente;
@model List<PacienteViewModel>;
@{
    Layout = "_AsistentLayout";
    ViewData["Title"] = "Medicos";
}

<style>
    .img-container {
        max-width: 100%;
        max-height: 200px;
        overflow: clip;
    }

        .img-container img {
            width: 100%;
            height: 100%;
        }
</style>

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Paciente" asp-action="AgregarPaciente" class="btn btn-outline-secondary d-block mx-auto"><i class="bi bi-file-plus-fill"></i>Agregar Paciente</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h3>No hay Pacientes registrados</h3>
        }
        else
        {
            @foreach (PacienteViewModel item in Model)
            {
                <div class="col-3 mb-3">
                    <div class="card shadow-sm">
                        <div class="img-container">
                            <img class="bd-placeholder-img card-img-top img-product-size" src="@item.ImageUrl" />
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mb-2">@item.Name @item.LastName</h5>
                            <p class="card-text"><strong>Cedula:</strong> @item.Cedula</p>
                            <p class="card-text"><strong>Fecha de Nacimiento:</strong> @item.BirhtDate.ToString("dd/MM/yyyy")</p>
                            <p class="card-text"><strong>Telefono:</strong> @item.Phone</p>
                            <p class="card-text"><strong>Dirrecion:</strong> @item.Direction</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Paciente" asp-action="EditarPaciente" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-fill"></i>Editar</a>
                                    <a asp-controller="Paciente" asp-action="EliminarPaciente" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-eraser-fill"></i>Borrar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>
