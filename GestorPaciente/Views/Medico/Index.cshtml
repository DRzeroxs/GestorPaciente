@using GestorPaciente.Core.Application.ViewModels.Medicos;
@model List<MedicoViewModel>;
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Medicos";
}

<style>
    .img-container {
        max-width: 100%;
        max-height: 200px; 
        overflow:clip; 
    }
        
    .img-container img {
        width: 100%; 
        height: 100%; 
    }
</style>

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Medico" asp-action="AgregarMedico" class="btn btn-outline-secondary d-block mx-auto"><i class="bi bi-file-plus-fill"></i>Agregar Medico</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h3>No hay Medicos registrados</h3>
        }
        else
        {
            @foreach (MedicoViewModel item in Model)
            {
                <div class="col-3 mb-3">
                    <div class="card shadow-sm">
                        <div class="img-container">
                            <img class="bd-placeholder-img card-img-top img-product-size" src="@item.ImageUrl"/>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">@item.Name @item.LastName</h6>
                            <p class="card-text">@item.Cedula</p>
                            <p class="card-text">@item.Email</p>
                            <p class="card-text">@item.Phone</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Medico" asp-action="EditarMedico" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-fill"></i>Editar</a>
                                    <a asp-controller="Medico" asp-action="EliminarMedico" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-eraser-fill"></i>Borrar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>