@using GestorPaciente.Core.Application.ViewModels.ResultadosLaboratorio;
@model AsignarPruebaViewModel
@{
    ViewData["Title"] = "Seleccionar Pruebas";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                @if (Model.Pruebas != null && Model.Pruebas.Any())
                {
                    <div class="card-header bg-dark text-light">
                        <h4>Asignar pruebas</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <form method="post" asp-controller="Cita" asp-action="SeleccionarPruebas" enctype="multipart/form-data">
                                <span asp-validation-for="PruebasSelesccionadas" class="text-danger"></span>
                                <label class="mb-3">Pruebas de laboratorio:</label>
                                @foreach (var prueba in Model.Pruebas)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="@("prueba_" + prueba.Id)" name="PruebasSelesccionadas" value="@prueba.Id" />
                                        <label class="form-check-label" for="@("prueba_" + prueba.Id)">
                                            @prueba.Name
                                        </label>
                                    </div>
                                }

                                <input type="hidden" asp-for="CitaId" value="@Model.CitaId"/>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary d-block mx-auto"><i class="bi bi-plus-circle-fill"></i>Asignar</button>
                                </div>
                            </form>
                            <a asp-controller="Cita" asp-action="Index">Volver</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>