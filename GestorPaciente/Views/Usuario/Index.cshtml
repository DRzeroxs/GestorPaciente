@using GestorPaciente.Core.Application.ViewModels.Usuario;
@model List<UsuarioViewModel>;
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Usuarios";
}

<div class="row mb-3">
    <div class="col-3 offset-9">
        <a asp-action="AgregarUsuario" asp-controller="Usuario" class="btn btn-outline-secondary d-block mx-auto">
            <i class="bi bi-file-plus-fill"></i> Agregar Usuario
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Lista de Usuarios</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model != null && Model.Count > 0)
                    {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Email</th>
                                    <th>Usuario</th>
                                    <th>Rol</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="col-2">@Html.DisplayFor(m => item.Name)</td>
                                        <td class="col-2">@Html.DisplayFor(m => item.LastName)</td>
                                        <td class="col-3">@Html.DisplayFor(m => item.Email)</td>
                                        <td class="col-2">@Html.DisplayFor(m => item.UserName)</td>
                                        <td class="col-1">
                                            @if(item.Admin){
                                                <text>Administrador</text>
                                            }
                                            else
                                            {
                                                <text>Asistente</text>
                                            }
                                        </td>
                                        <td class="col-2">
                                            <a class="btn btn-warning btn-sm" asp-action="EditarUsuario" asp-route-id="@item.Id">
                                                <i class="bi bi-pencil-fill"></i> Editar
                                            </a>
                                            <a class="btn btn-danger btn-sm" asp-action="EliminarUsuario" asp-route-id="@item.Id">
                                                <i class="bi bi-eraser-fill"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay Registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>